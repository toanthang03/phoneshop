                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: white;" href="/User/Register">Register</a>
                    </li>
                </ul>
                            }
                        
                    </div>
            </div>
            <div class="row" style="margin-top: 10px;">
                <div class="col-md-3">
                    <div class="dropdown">
                        <button class="btn btn-outline dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Danh mục sản phẩm
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/product/listproduct/1">iPhone</a></li>
                            <li><a class="dropdown-item" href="/product/listproduct/2">iPad</a></li>
                            <li><a class="dropdown-item" href="/product/listproduct/3">Macbook</a></li>
                            <li><a class="dropdown-item" href="/product/listproduct/4">Apple watch</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-5 col-lg-5">
                    <div class="search">
                        <form class="d-flex" role="search" method="post" action="/product/index">
                            <input class="form-control me-2" type="search" placeholder="Bạn cần tìm gì?" aria-label="Search" value="@ViewBag.Search" name="Search">
                            <button class="btn btn-outline" type="submit" style="transform: translateX(10%);" id="searchsubmit">Search</button>
                        </form>
                    </div>
                </div>
                <div class="col-md-3" style="margin: auto;">
                    <a href="/cart" class="btn btn-link">
                        <i class="fas fa-shopping-cart"> Giỏ hàng</i>
                    </a>
                </div>
            </div>
        </div>
